generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario{
  id Int @id @default(autoincrement())
  nome String
  idade Int
  email String @unique
  password String
  linkGithub String?
}

model Produto {
  id Int @id @default(autoincrement())
  description String
  valor Int
  quantidadeEstoque Int
  productType String
  createdAt DateTime @default(now())
  disponivel Boolean? @default(true)
}

model Loja {
  cnpj String @id
  nome String
  segmento String @default("alimentação")
  endereco String
  telefone String?
  quantidadeFiliais Int
  dataHoraAbertura DateTime
}


model Fornecedor{
  id Int @id @default(autoincrement())
  nome String
  email String
  avaliacao Float
  createdAt DateTime @default(now())
  updateAt DateTime @default(now())
}




